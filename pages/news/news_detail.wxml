<!--pages/news/news_detail.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">ID是{{id}}的文章标题</view>
        <view class="page__desc">作者 2020年3月4日</view>
    </view>
    <view class="page__bd">
        <view class="weui-article">
            <view class="weui-article__h1">大标题</view>
            <view class="weui-article__section">
                <view class="weui-article__h2">章标题</view>
                <view class="weui-article__section">
                    <view class="weui-article__h3">1.1 节标题</view>
                    <view class="weui-article__p">
                        文章内容可以发接口去后台查
                    </view>
                    <view class="weui-article__p">
                        <image class="weui-article__img" src="{{imageUrl1}}" mode="aspectFit" style="height: 180px" />
                        <image class="weui-article__img" src="{{imageUrl2}}" mode="aspectFit" style="height: 180px" />
                    </view>
                </view>

            </view>
        </view>
    </view>
</view>

